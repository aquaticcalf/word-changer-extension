{
  "manifest_version": 3,
  "name": "word changer",
  "version": "1.0",
  "description": "a firefox extension that randomly changes words as you type",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
